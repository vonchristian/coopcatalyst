<div class="container">
<div class="box box-solid">
<div class="box-header with-border">
<h4>Loan Approval Details</h4>
      </div>
      <div class="box-body">
       <%= simple_form_for [@loan, @approval], url: :loans_section_loan_approvals  do |f| %>
      <%=f.error_notification %>
<div class="col-md-6">
</div>
<div class="col-md-5">
      <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
      <%= f.input :remarks, as: :text %>
      <%= f.input :reference_number %>

      <div class="modal-footer">
          <%=f.submit 'Approve', class: 'btn btn-primary', data: { disable_with: "Approving..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
