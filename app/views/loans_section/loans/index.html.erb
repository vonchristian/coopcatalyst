<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h3 class="text-muted"> <%= Cooperative.last.name %></h3>
      </div>
      <div class="box-body">
        <h4 class="text-muted"> Loan Overview </h4>
        <hr>
        <div class="row">

            <div class="col-md-3">
              <small class="text-danger">
                LOANS RELEASED
              </small>
            </div>
            <div class="col-md-2">
              <small class="text-muted">
                PAYMENTS
              </small>
            </div>
            <div class="col-md-2">
              <small class="text-muted">
                LOANS RECEIVABLES
              </small>
            </div>
          </div>
          <br>
          <hr>
        <div class=""
        <div class="table table-responsive">
          <table class="table table-striped">
            <thead>
              <tr class="text-muted">
                <th> Borrower </th>
                <th> Type </th>
                <th> Amount </th>
                <th> Term</th>
                <th> Loan Status </th>
                <th> </th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <tr>
                  <td><%=link_to(image_tag(loan.member.avatar.url(:small), class: "img-square", height: 35, width: 35), loans_section_loan_path(loan)) %> &nbsp;
                  <%=link_to loan.member_full_name, loans_section_loan_path(loan) %> </td>
                  <td><%=loan.loan_product_name %></td>
                  <td> <%=number_to_currency loan.amount %></td>
                  <td> <%= loan.term %></td>
                  <td> <span class="label label-<%=loan.status_label_color%>"> <%= loan.status %> </td>
                  <td><i class="icon-options text-muted"></i></td>
                </tr>
              <% end %>
            </tbody>
          </table>
