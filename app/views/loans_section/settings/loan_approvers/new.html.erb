<% User.all.each do |user| %>
<%=image_tag(user.avatar.url(:small), class: "img-circle") %>
<%= user.full_name %>
<%= user.role %>
<%=simple_form_for @loan_approver, url: :loans_section_loan_approvers do |f| %>
  <%= f.input :user_id, input_html: { value: user.id} %>
  <%= f.submit "Set", class: "btn btn-primary btn-flat" %>
<% end %>
<% end %>
