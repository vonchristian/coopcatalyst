<div class="container">
<div class="box box-primary">
  <div class="box-header with-border">
    <h4><center><%=@account.name %></center></h4>
  </div>
  <div class="box-body">
  <h4>Entries History</h4>
 <table class="table table-hover">
 <thead>
    <tr class="text-uppercase">
      <th>Description</th>
      <th><span class="pull-right">Debits</span></th>
      <th><span class="pull-right">Credits</span></th>
      <th><span class="pull-right">Date</span></th>
    </tr>
  </thead>
  <tbody>
  <% @account.entries.each do |entry| %>
    <tr>
      <td><%=link_to entry.description, entry %></td>
      <td></td>
      <td></td>
      <td><span class="pull-right"><%=entry.date.strftime("%B %e, %Y") if entry %></span></td>
    </tr>
    <% entry.debit_amounts.each do |debit_amount| %>
      <tr>
        <td>&nbsp; &nbsp;<%= "#{debit_amount.account.name}" %></td>
        <td><span class="pull-right"><%=number_to_currency debit_amount.amount %></span></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
    <% entry.credit_amounts.each do |credit_amount| %>
      <tr>
        <td>&nbsp; &nbsp;<%= "#{credit_amount.account.name}" %></td>
        <td></td>
        <td><span class="pull-right"><%=number_to_currency credit_amount.amount %></span></td>
        <td></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

  </div>
  </div>
  <hr>
</div>
</div>
