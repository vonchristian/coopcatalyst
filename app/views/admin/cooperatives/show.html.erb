<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
      </div>
      <div class="box-body">
<%= link_to "New Department", new_cooperative_department_path(@cooperative) %>

<% @cooperative.departments.each do |department| %>
<div class="row">
  <div class="col-md-4">
    <b><%=department.name %></b><br>
    <% department.users.each do |user| %>
      <%=image_tag(user.avatar.url(:small), class: "img-circle", height: 35, width: 35) %>
    <% end %>
    <hr />
  </div>
</div>
<% end %>
