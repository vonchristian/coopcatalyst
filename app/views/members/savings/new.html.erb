<div class="container">
<div class="box box-solid">
<div class="box-header with-border">
<h4>Savigns Account Details</h4>
      </div>
      <div class="box-body">
       <%= simple_form_for [@member, @saving], url: :member_savings  do |f| %>
      <%=f.error_notification %>
<div class="col-md-6">
</div>
<div class="col-md-5">
      <%= f.input :savings_product_id, collection: CoopServices::SavingsProduct.all.map{ |a| [a.name.titleize, a.id] }, as: :radio_buttons %>
      <%= f.input :date_opened, as: :string, input_html: { class: "datepicker" } %>
      <%= f.input :account_number %>


      <div class="modal-footer">
          <%=f.submit 'Save', class: 'btn btn-primary', data: { disable_with: "Saving..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
