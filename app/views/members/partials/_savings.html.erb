<div class="tab-pane" id="savings">
  <%=link_to "Open Savings", new_member_saving_path(@member), class: "btn btn-primary btn-flat" %>
  <hr />
  <% @member.savings.each do |savings| %>
    <div class="row">
      <div class="col-md-3">
        <%=savings.account_number %>
      </div>
      <div class="col-md-3">
        <%=savings.savings_product_name %>
      </div>
      <div class="col-md-3">
        <%= number_to_currency savings.balance %><br>
        <small> BALANCE </small>
      </div>
      <div class="col-md-3">
        <%=link_to "Deposit", new_saving_deposit_path(savings), class: "btn btn-default btn-sm btn-flat" %>
        <%=link_to "Withdraw", new_saving_withdrawal_path(savings), class: "btn btn-danger btn-sm btn-flat" %>

      </div>
    </div>
    <hr>
  <% end %>
</div>
