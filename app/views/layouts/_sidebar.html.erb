<aside class="main-sidebar">
  <section class="sidebar">
  <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%=link_to(image_tag(current_user.avatar.url(:small), class: "img-circle"), user_path(current_user))%>
      </div>
      <div class="pull-left info">
        <p><%= link_to current_user.first_name, user_path(current_user) %></p>
        <a href=""><%=current_user.role.to_s.titleize %></a><br/>
      </div>
    </div>
    <!-- search form -->
    <%=form_tag members_path, class: 'sidebar-form', method: :get do %>
      <div class="input-group">
        <%=text_field_tag :query, params[:query], class: 'form-control', placeholder: 'Search...' %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
    <ul class="sidebar-menu">
      <%= render 'layouts/sidebars/loan_officer' if current_user.loan_officer? %>
      <%= render 'layouts/sidebars/consumers_section' if current_user.cashier? %>
      <%= render 'layouts/sidebars/manager' if current_user.manager? %>
      <%= render 'layouts/sidebars/teller' if current_user.teller? %>

    </ul>
  </section>
</aside>
